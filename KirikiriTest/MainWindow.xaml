<Window x:Class="KirikiriTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KirikiriTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" MinHeight="100"/>
            <RowDefinition Height="6"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl x:Name="SourceTabs" Grid.Row="0">
            <TabItem Header="File">
                <Grid>
                    <TextBox x:Name="FilenameTextBox" Margin="10,10,10,35" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                    <Button x:Name="BrowseButton" Content="Browse" Margin="90,0,0,10" HorizontalAlignment="Left" Width="75" Click="BrowseButton_Click" Height="20" VerticalAlignment="Bottom"/>
                    <Button x:Name="SubmitFileButton" Content="OK" Margin="10,0,0,10" HorizontalAlignment="Left" Width="75" Click="SubmitFileButton_Click" Height="20" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Text">
                <Grid>
                    <Button x:Name="SubmitInputButton" Content="OK" Margin="10,92,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="TestStringButton_Click"/>
                    <TextBox x:Name="InputTextBox" Margin="10,10,10,35" TextWrapping="Wrap" Text="*start" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="1" ResizeDirection="Rows" HorizontalAlignment="Stretch"/>
        <TabControl x:Name="ResultTabs" Grid.Row="2">
            <TabItem Header="List">
                <Grid>
                    <TextBox x:Name="GraupelTextBox" Margin="0" AcceptsReturn="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tree">
                <Grid>
                    <TreeView x:Name="GraupelTreeView" Margin="0"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
